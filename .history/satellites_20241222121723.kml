<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2">
  <Document>
    <name>LEO Satellites</name>
    
    <Style id="leoStyle">
      <IconStyle>
        <scale>1.0</scale>
        <Icon>
          <href>http://maps.google.com/mapfiles/kml/pushpin/blue-pushpin.png</href>
        </Icon>
        <hotSpot x="20" y="2" xunits="pixels" yunits="pixels"/>
      </IconStyle>
      <LabelStyle>
        <scale>0.8</scale>
      </LabelStyle>
    </Style>

    <!-- ISS -->
    <Placemark>
      <name>ISS - תחנת החלל הבינלאומית</name>
      <styleUrl>#leoStyle</styleUrl>
      <description>גובה: ~408 ק"מ</description>
      <Point>
        <altitudeMode>absolute</altitudeMode>
        <coordinates>0,0,408000</coordinates>
      </Point>
    </Placemark>

